<%- include('../includes/head.ejs') %>

<!--<%- include('../includes/navigation.ejs') %>-->

<!--<div class="c-app flex-row align-items-center">-->
<div class="container">
    <div class="row col-12 align-items-center justify-content-center">
        <div class="col-md-8">

            <div class="card-group">
                <div class="card text-white p-0 d-md-down-none" style="width:44%">
                    <div class="card-body p-0 text-center">
                        <img src="/images/register-vector.svg" class="img-fluid w-100 h-100 d-block" alt="ثبت&zwnj; نام در سایت">
                    </div>
                </div>

                <div class="card p-4">
                    <div class="card-body">
                        <div class="row col-12">

                            <% if(errors.length > 0) { %>

                                <div class="container">
                                    <div class="row m-0 ">
                                        <div class="col-xs-12 col-sm-12 p-0">
                                            <div class="alert alert-danger alert-dismissible fade show style_alert"
                                                 role="alert">


                                                <ul class="list-unstyled list_unstyled_mesage">
                                                    <% errors.forEach(function (item) {
                                                        //
                                                    %>
                                                    <li class="text-right "><%= item %></li>
                                                    <% }) %>
                                                </ul>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <%- include('../includes/flashMessage.ejs') %>

                        <h3 class="mb-4">login</h3>

                        <form method="POST" action="/login" aria-label="Login">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <div class="form-group mb-2">
                                <label for="email">  email</label>

                                <input class="form-control" type="email" name="email" placeholder="email">
                            </div>
                            <div class="form-group mb-2">
                                <label for="password">  password</label>
                                <input class="form-control" type="password" name="password" placeholder="password">
                            </div>


                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary px-4" type="submit">login</button>
                                </div>
                            </div>

                        </form>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!--</div>-->

<%- include('../includes/end.ejs') %>